                                    <Border.Style>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="Visibility" Value="Hidden"/>
                                            <Setter Property="Height" Value="0"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsVisible, RelativeSource={x:Static RelativeSource.Self}}" Value="True">

                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="Height"
                                                                         From="0.0" To="130.0"
                                                                         Duration="0:0:0.3"
                                                                          />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>

                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <ScrollViewer Height="190">
                                        <ListView x:Name="lvCustomerLookup" BorderBrush="Blue" BorderThickness="3"  >
                                            <ListView.ItemTemplate >
                                                <DataTemplate >
                                                    <Grid Width="400">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition/>
                                                            <ColumnDefinition/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="--------------------------------------"/>
                                                        <TextBlock Text="{Binding CompanyName, StringFormat=\{0\}    -}" VerticalAlignment="Center" Background="White" HorizontalAlignment="Left" />
                                                        <TextBlock Text="{Binding ContactName}" VerticalAlignment="Center" Grid.Column="1" Margin="10 0 0 0"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>

                                        </ListView>
                                    </ScrollViewer>

                                </Border>

                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" >
                                <TextBlock Text="Payment Date" Style="{StaticResource Style1}"/>
                                <TextBlock Style="{StaticResource Styledot}" Text="  . . . . . . . . . . . . . . . . . . . . . . . . . . . . " />
                            </StackPanel>
                            <DatePicker Grid.Row="1" Grid.Column="1" Margin="10 3" SelectedDate="{Binding SoDate}"  Name="dpiPaymentDate"   VerticalAlignment="Center" FontSize="{StaticResource Font1}" HorizontalContentAlignment="Center" />

                            <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" >
                                <TextBlock Text="Payment Method" Style="{StaticResource Style1}"/>
                                <TextBlock Style="{StaticResource Styledot}" Text="  . . . . . . . . . . . . . . . . . . . . . . . . . . . . " />
                            </StackPanel>
                            <ComboBox Name="cmbPaymentMethod" FontSize="{StaticResource Font1}"
                                      Margin="10 0"
                                      Grid.Row="2"
                                      Grid.Column="1"
                                      materialDesign:TextFieldAssist.HasClearButton="True"
                                      IsEditable="True"
                                      Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                      materialDesign:TextFieldAssist.SuffixText="sw"
                                      DisplayMemberPath="Code" SelectedValuePath="Id"   SelectedValue="{Binding term_fk}"/>
                            <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" >
                                <TextBlock Text="Reference no. " Style="{StaticResource Style1}"/>
                                <TextBlock Style="{StaticResource Styledot}" Text="  . . . . . . . . . . . . . . . . . . . . . . . . . . . . " />
                            </StackPanel>
                            <TextBox Grid.Row="3" Grid.Column="1" HorizontalContentAlignment="Center" FontSize="{StaticResource Font1}" VerticalContentAlignment="Bottom" Style="{StaticResource MaterialDesignTextBox}" Text="{Binding PoNumber}"   Margin="10 0"/>
                            <StackPanel Orientation="Horizontal" Grid.Row="4">
                                <TextBlock Text="Deposit To" Style="{StaticResource Style1}"/>
                                <TextBlock Style="{StaticResource Styledot}" Text="  . . . . . . . . . . . . . . . . . . . . . . . . . . . . " />
                            </StackPanel>
                            <ComboBox Name="cmbDepositTo" FontSize="{StaticResource Font1}"
                                          Margin="10 0"
                                          Grid.Row="4"
                                          Grid.Column="1"
                                          materialDesign:TextFieldAssist.HasClearButton="True"
                                          IsEditable="True"
                                          Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                          materialDesign:TextFieldAssist.SuffixText="sw"
                                          DisplayMemberPath="Code" SelectedValuePath="Id"   SelectedValue="{Binding term_fk}"/>

                        </Grid>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <UniformGrid Columns="2" Rows="1" Grid.Row="0">
                                <StackPanel Orientation="Horizontal" >
                                    <TextBlock Text="Email" Style="{StaticResource Style1}"/>
                                    <TextBlock Style="{StaticResource Styledot}" Text="  . . . . . . . . . . . . . . . . . . . . . . . . . . . . " />
                                </StackPanel>
                                <TextBox  HorizontalContentAlignment="Center" FontSize="{StaticResource Font1}" VerticalContentAlignment="Bottom" Style="{StaticResource MaterialDesignTextBox}" Text="{Binding PoNumber}"   Margin="10 0"/>

                            </UniformGrid>
                            <UniformGrid Columns="2" Rows="1" Grid.Row="4">
                                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                                    <TextBlock Text="Amount Receive" Style="{StaticResource Style1}"/>
                                    <TextBlock Style="{StaticResource Styledot}" Text="  . . . . . . . . . . . . . . . . . . . . . . . . . . . . " />
                                </StackPanel>
                                <TextBox Name="txtTermPercent" HorizontalContentAlignment="Center" FontSize="{StaticResource Font1}" VerticalContentAlignment="Bottom" Style="{StaticResource MaterialDesignTextBox}" Text="{Binding TermPercent,UpdateSourceTrigger=PropertyChanged}"   Margin="10 0"/>
                            </UniformGrid>
                        </Grid>




                    </UniformGrid>

                    <Border BorderThickness="0 0 0 2" Margin="10 0" BorderBrush="Black" VerticalAlignment="Bottom" Grid.Row="2" >
                        <UniformGrid Columns="3">
                            <TextBlock Name="txtShowInventory" Text="  Lines " FontSize="20" Margin="0 0 0 10"/>
                        </UniformGrid>
                    </Border>
                    <StackPanel Grid.Row="3" >
                        <Border Height="300" BorderThickness="1" BorderBrush="#505C6D" Margin="30" CornerRadius="5" >
                            <DataGrid  Name="dgSoItems" ItemsSource="{Binding SoItems}"  Margin="2"  AutoGenerateColumns="False" CanUserAddRows="False" FontSize="17"  SelectionUnit="FullRow" AlternatingRowBackground="LightBlue"   >
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="" Binding="{Binding ProductMaster.StyleNumber}" Width="100" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Desciption" Binding="{Binding ProductMaster.UPC}" Width="*" IsReadOnly="False"/>
                                    <DataGridTextColumn Header="Due Date" Binding="{Binding ProductMaster.Color}" Width="*" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Orginal Amount" Binding="{Binding ProductMaster.Size}" Width="*" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Open Balance" Binding="{Binding Price,StringFormat=N2,UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                                    <DataGridTextColumn Header="Payment" Binding="{Binding PriceTerm,StringFormat=N2}" IsReadOnly="True" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                        <UniformGrid Rows="1" Columns="2" Height="360">
                            <UniformGrid Name="TotalChargePart1" Rows="9" Columns="1">
                                <UniformGrid Columns="2" Rows="1">
                                    <StackPanel Orientation="Horizontal" >
                                        <TextBlock Text="Tax Area" Style="{StaticResource Style1}"/>
                                        <TextBlock Style="{StaticResource Styledot}" Text="  . . . . . . . . . . . . . . . . . . . . . . . . . . . . " />
                                    </StackPanel>
                                    <ComboBox Name="cmbTaxAreaSo" 
                                              materialDesign:TextFieldAssist.HasClearButton="True"
                                              IsEditable="True"
                                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                              materialDesign:TextFieldAssist.SuffixText="sw"
                                              Margin="10 0"
                                              SelectedValue="{Binding TaxArea_fk}"
                                              FontSize="15"
                                              DisplayMemberPath="Name" SelectedValuePath="Id" />
                                </UniformGrid>
                                <UniformGrid Columns="2" Rows="1">
                                    <StackPanel Orientation="Horizontal" >
                                        <TextBlock Text="Freight" Style="{StaticResource Style1}"/>
                                        <TextBlock Style="{StaticResource Styledot}" Text="  . . . . . . . . . . . . . . . . . . . . . . . . . . . . " />
                                    </StackPanel>
                                    <TextBox Text="{Binding Freight,StringFormat=N2}" HorizontalContentAlignment="Right" />
                                </UniformGrid>
                                <UniformGrid Columns="2" Rows="1">
                                    <StackPanel Orientation="Horizontal" >
                                        <TextBlock Text="Handling" Style="{StaticResource Style1}"/>
                                        <TextBlock Style="{StaticResource Styledot}" Text="  . . . . . . . . . . . . . . . . . . . . . . . . . . . . " />
                                    </StackPanel>
                                    <TextBox Text="{Binding Handling,StringFormat=N2}" HorizontalContentAlignment="Right" />
                                </UniformGrid>
                            </UniformGrid>
                            <TextBlock Name="TotalChargePart0" Visibility="Collapsed" ></TextBlock>
                            <UniformGrid Rows="9" Columns="1">
                                <UniformGrid Name="TotalChargePart5" Columns="2" Rows="1">
                                    <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                                        <TextBlock Text="Subtotal " Style="{StaticResource Style1}"/>
                                        <TextBlock Style="{StaticResource Styledot}" Text="  . . . . . . . . . . . . . . . . . . . . . . . . . . . . " />
                                    </StackPanel>
                                    <Grid>
                                        <Rectangle  Style="{StaticResource StyleReadOnlyRec}"  Grid.Row="0" Grid.Column="1"/>
                                        <TextBlock Style="{StaticResource StyleReadOnly}" Text="{Binding SubtotalwithServices,StringFormat=N2}" FontSize="20" Grid.Row="0" Grid.Column="1"  />
                                    </Grid>
                                </UniformGrid>
                                <UniformGrid Name="TotalChargePart6" Columns="2" Rows="1">
                                    <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                                        <TextBlock Text="TAX " Style="{StaticResource Style1}"/>
                                        <TextBlock Style="{StaticResource Styledot}" Text="  . . . . . . . . . . . . . . . . . . . . . . . . . . . . " />
                                    </StackPanel>
                                    <Grid>
                                        <Rectangle  Style="{StaticResource StyleReadOnlyRec}"  Grid.Row="0" Grid.Column="1"/>
                                        <TextBlock Style="{StaticResource StyleReadOnly}" Text="{Binding Tax,StringFormat=N2}" FontSize="20" Grid.Row="0" Grid.Column="1"  />
                                    </Grid>
                                </UniformGrid>
                                <UniformGrid Columns="2" Rows="1">
                                    <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                                        <TextBlock Text="Total " Style="{StaticResource Style1}"/>
                                        <TextBlock Style="{StaticResource Styledot}" Text="  . . . . . . . . . . . . . . . . . . . . . . . . . . . . " />
                                    </StackPanel>
                                    <Grid>
                                        <Rectangle  Style="{StaticResource StyleReadOnlyRec}"  Grid.Row="0" Grid.Column="1"/>
