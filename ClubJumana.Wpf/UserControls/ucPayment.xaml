                                <UniformGrid Columns="2" Rows="1">
                                    <StackPanel Orientation="Horizontal" >
                                        <TextBlock Text="Ship Via" Style="{StaticResource Style1}"/>
                                        <TextBlock Style="{StaticResource Styledot}" Text="  . . . . . . . . . . . . . . . . . . . . . . . . . . . . " />
