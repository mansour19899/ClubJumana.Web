@model IEnumerable<ClubJumana.DataLayer.Entities.ProductMaster>

@{
    ViewData["Title"] = "salam";
}

<h1>Hello, Vue 3</h1>

<div id="app">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"></h4>
                    <div class="form-inline">
                        <div class="form-group mx-sm-3 mb-2">
                            <input class="form-control" placeholder="Type Here" style="min-width: 300px">
                        </div>
                        <button class="btn btn-dark mb-2">Search</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div v-if="age">
        <p>{{ title }}</p>
        <p>{{ age.styleNumber }}</p>
        
    </div>
    <div v-else>
        <p>salam</p>
    </div>

</div>
<script src="https://unpkg.com/vue@3.0.2"></script>

<script>
    const app = Vue.createApp(
        {
            props:['id'],
            data(){
                return{
                    age:null
                }
            },
            mounted() {
                fetch( 'https://localhost:44374/api/ProductInformation/5')
                    .then(res => res.json())
                    .then(data => this.age = data)
                    .catch(err=>console.log(err.message))
            }


        })

    app.mount('#app')

</script>




